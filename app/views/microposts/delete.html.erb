<% provide(:title, 'Delete micropost') %>

<h1>Delete this post?</h1>

<div class='row'>
  <div class='col-md-6 col-md-offset-3'>

    <!-- hacky way to get the right styles in. Matching 'shared/feed' partial HTML -->
    <ol class='microposts'>
      <%= render partial: 'micropost', locals: { micropost: @micropost } %>
    </ol>

    <%= form_for @micropost, html: {method: :delete} do |f| %>
      <h2>Are you sure you want to delete this post?</h2>
      <p><%= f.submit "Destroy" %> or <%= link_to "cancel", request.referrer %></p>
    <% end %>
  </div><!-- end .col-md-6 -->
</div><!-- end .row -->
