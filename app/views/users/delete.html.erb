<% provide(:title, 'Delete user') %>

<h1>Delete <%= @user.name %></h1>

<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <%= gravatar_for @user %>
    <%= form_for @user, html: {method: :delete} do |f| %>
      <h2>Are you sure you want to delete <%= @user.name %>?</h2>
      <p><%= f.submit "Destroy" %> or <%= link_to "cancel", users_path %></p>
    <% end %>
  </div><!-- end .col-md-6 -->
</div><!-- end .row -->
