<% title = 'Forgot password' %>
<% provide(:title, title) %>
<h1><%= title %></h1>

<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <%= form_for(:passwor_reset, url: password_resets_path) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.submit 'Submit', class: 'btn btn-primary' %>
    <% end %>
  </div><!-- end .col-md-6 -->
</div><!-- end .row -->
